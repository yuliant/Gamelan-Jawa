<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:src="@mipmap/ic_launcher" />
        <Button
            android:onClick="toMengenalGamelan"
            android:id="@+id/btn_mengenal_gamelan"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Mengenal Gamelan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_video_gamelan"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Video Gamelan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:onClick="toTentang"
            android:id="@+id/btn_tentang"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Tentang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</ScrollView>

